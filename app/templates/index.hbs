<div class="list">
  {{#each last_actived as |topic|}}
    <div class="topic media topic-{{topic.id}}">
      <div class="avatar media-left">
        <a href="/etnl"><img class="media-object avatar-48"
                             src={{topic.user.avatar_url}} alt={{topic.user.id}}></a>
      </div>
      <div class="infos media-body">
        <div class="title media-heading">
          {{#link-to 'topics.show' topic title=topic.title}}{{topic.title}}{{/link-to}}
        </div>
        <div class="info">
          <a class="node" href="/topics/{{topic.node_id}}">{{topic.node_name}}</a>
          •
          <a data-name="" href="/etnl">{{topic.user.login}}</a>
          <span class="hidden-mobile">
          •
            最后由 <a href="/meeasyhappy">{{topic.last_reply_user_login}}</a> 于 {{topic.replied_at}}回复
          </span>
        </div>
      </div>
      <div class="count media-right">
        {{#link-to 'topics.show' topic class="state-false state-true"}}{{topic.replies_count}}{{/link-to}}
      </div>
    </div>
  {{/each}}
</div>
